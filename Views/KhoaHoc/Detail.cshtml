@model KhoaHoc;
@{
    ViewData["Title"] = "Detail Khóa Học";
    var khoahoc = Model;
}
<h1 class="display">Detail Khóa Học</h1>
  <div class="form-group">
    <label for="Id">Id</label>
    <input type="text" class="form-control" id="Id" name="Id"  value="@khoahoc.Id" readonly>
  </div>
  <div class="form-group">
    <label for="Name">Name</label>
    <input type="text" class="form-control" id="Name" name="Name"  value="@khoahoc.Name" readonly>
  </div>
  <div class="form-group">
    <label for="Slug">Slug</label>
    <input type="text" class="form-control" id="Slug" name="Slug"  value="@khoahoc.Slug" readonly>
  </div>
  <div class="form-group">
    <label for="TomtatKH">Tóm tắt khóa học</label>
    <input type="text" class="form-control" id="TomtatKH" name="TomtatKH" value="@khoahoc.TomTatKH" readonly>
  </div>
  <div class="form-group">
    <label for="NdDetail">Nội dung chi tiết</label>
    <input type="text" class="form-control" id="NdDetail" name="NdDetail"  value="@khoahoc.NdDetail" readonly>
  </div>
  <div class="form-group">
    <label for="Image">Hình ảnh</label>
    <img src="@khoahoc.Image" alt="Ảnh không tìm thấy">
  </div>
  <div class="form-group">
    <label for="Image">Loại Khóa Học</label>
    <input type="text" class="form-control" id="LoaiKH" name="LoaiKH"  value="@khoahoc.LoaiKhoaHoc.Name" readonly>
    </div>