@model List<LoaiKhoaHoc>;
@{
    ViewData["Title"] = "Update Khóa Học";
    var loaiKhoaHocs = Model;
    var khoahoc = ViewBag.KhoaHoc;
}
<h1 class="display">Update Khóa Học</h1>
<form action="/KhoaHoc/Save" method="POST"> 
  <div class="form-group">
    <label for="Id">Id</label>
    <input type="text" class="form-control" id="Id" name="Id"  value="@khoahoc.Id">
  </div>
  <div class="form-group">
    <label for="Name">Name</label>
    <input type="text" class="form-control" id="Name" name="Name"  value="@khoahoc.Name">
  </div>
  <div class="form-group">
    <label for="Slug">Slug</label>
    <input type="text" class="form-control" id="Slug" name="Slug"  value="@khoahoc.Slug">
  </div>
  <div class="form-group">
    <label for="TomtatKH">Tóm tắt khóa học</label>
    <input type="text" class="form-control" id="TomtatKH" name="TomtatKH" value="@khoahoc.TomTatKH">
  </div>
  <div class="form-group">
    <label for="NdDetail">Nội dung chi tiết</label>
    <input type="text" class="form-control" id="NdDetail" name="NdDetail"  value="@khoahoc.NdDetail">
  </div>
  <div class="form-group">
    <label for="Image">Hình ảnh</label>
    <input type="text" class="form-control" id="Image" name="Image"  value="@khoahoc.Image">
  </div>
  <div class="form-group">
        <label for="LoaiKhoaHoc">LoaiKhoaHoc</label>
        <select class="form-control" id="LoaiKhoaHocId" name="LoaiKhoaHocId">
            @foreach (var loaiKhoaHoc in loaiKhoaHocs)
            {
                @if(loaiKhoaHoc.Id == khoahoc.LoaiKhoaHocId){
                  <option value="@loaiKhoaHoc.Id" selected="selected">@loaiKhoaHoc.Name</option>
                }
                else{
                  <option value="@loaiKhoaHoc.Id">@loaiKhoaHoc.Name</option>
                }
            }
        </select>
    </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>